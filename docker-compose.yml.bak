version: "3.8"

services:
  web:
    build: .
    image: fastcp-web:local
    container_name: fastcp-web
    working_dir: /app
    restart: unless-stopped
    volumes:
      - .:/app
    ports:
      - "8000:8000"
    environment:
      MYSQL_DATABASE: fastcp
      MYSQL_USER: fastcpuser
      MYSQL_PASSWORD: fastcppass
      MYSQL_HOST: mariadb
    depends_on:
      - mariadb
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/health/" ]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 15s

  mariadb:
    image: mariadb:11.2
    container_name: fastcp-mariadb
    restart: unless-stopped
    environment:
      MARIADB_ROOT_PASSWORD: rootpass
      MARIADB_DATABASE: fastcp
      MARIADB_USER: fastcpuser
      MARIADB_PASSWORD: fastcppass
    ports:
      - "3307:3306"
    volumes:
      - mariadb_data:/var/lib/mysql
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "fastcpuser", "-pfastcppass"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s

  phpmyadmin:
    image: phpmyadmin:5.2.1
    container_name: fastcp-phpmyadmin
    restart: unless-stopped
    ports:
      - "8081:80"
    environment:
      PMA_HOST: mariadb

  ftp:
    image: stilliard/pure-ftpd:latest
    container_name: fastcp-ftp
    restart: unless-stopped
    ports:
      - "21:21"
      - "30000-30009:30000-30009"
    volumes:
      - ./ftp/data:/home/ftpuser
      - fastcp_ftp_passwd:/etc/pure-ftpd/passwd
    environment:
      PUBLICHOST: localhost
      ADDED_FLAGS: "-l puredb:/etc/pure-ftpd/pureftpd.pdb -E -j -R -P localhost"
    depends_on:
      - mariadb
    healthcheck:
      test: ["CMD-SHELL", "pgrep -f pure-ftpd || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 15s

volumes:
  mariadb_data:
    name: fastcp-mariadb-data
  fastcp_ftp_passwd:
    name: fastcp-ftp-passwd
